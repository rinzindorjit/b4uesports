{
  "version": 2,
  "buildCommand": "npm run build-deploy",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/payments",
      "destination": "/api/payments.js"
    },
    {
      "source": "/api/transactions",
      "destination": "/api/transactions.js"
    },
    {
      "source": "/api/packages",
      "destination": "/api/packages.js"
    },
    {
      "source": "/api/pi-price",
      "destination": "/api/pi-price.js"
    },
    {
      "source": "/api/health",
      "destination": "/api/health.js"
    },
    {
      "source": "/api/test",
      "destination": "/api/test.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}