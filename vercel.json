{
  "version": 2,
  "buildCommand": "node build-with-copy.cjs",
  "outputDirectory": "dist/public",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/dist/public/$1"
    }
  ],
  "builds": [
    { "src": "dist/vercel-handler.js", "use": "@vercel/node" },
    { "src": "dist/public/**", "use": "@vercel/static" }
  ]
}