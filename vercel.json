{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "env": {
    "PI_SANDBOX": "true"
  },
  "rewrites": [
    {
      "source": "/api/payments",
      "destination": "/api/payments.ts"
    },
    {
      "source": "/api/transactions",
      "destination": "/api/transactions.ts"
    },
    {
      "source": "/api/packages",
      "destination": "/api/packages.ts"
    },
    {
      "source": "/api/pi-price",
      "destination": "/api/pi-price.ts"
    },
    {
      "source": "/api/health",
      "destination": "/api/health.ts"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@4.0.0"
    }
  }
}