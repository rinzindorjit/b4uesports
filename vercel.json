{
  "version": 2,
  "buildCommand": "npm run build-deploy",
  "outputDirectory": "dist",
  "env": {
    "PI_SANDBOX": "true"
  },
  "rewrites": [
    {
      "source": "/api/payments",
      "destination": "/api/dist/payments.js"
    },
    {
      "source": "/api/transactions",
      "destination": "/api/dist/transactions.js"
    },
    {
      "source": "/api/packages",
      "destination": "/api/dist/packages.js"
    },
    {
      "source": "/api/pi-price",
      "destination": "/api/dist/pi-price.js"
    },
    {
      "source": "/api/health",
      "destination": "/api/dist/health.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/dist/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}