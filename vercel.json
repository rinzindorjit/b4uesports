{
  "version": 2,
  "buildCommand": "node vercel-build.cjs && npm run build",
  "outputDirectory": "dist",
  "env": {
    "PI_SANDBOX": "true"
  },
  "rewrites": [
    {
      "source": "/api/payments",
      "destination": "/api/payments.js"
    },
    {
      "source": "/api/transactions",
      "destination": "/api/transactions.js"
    },
    {
      "source": "/api/packages",
      "destination": "/api/packages.js"
    },
    {
      "source": "/api/pi-price",
      "destination": "/api/pi-price.js"
    },
    {
      "source": "/api/health",
      "destination": "/api/health.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node@4.0.0"
    }
  }
}