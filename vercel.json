{
  "version": 2,
  "buildCommand": "npm run build-deploy",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/api/pi-price", "destination": "/api/pi-price.js" },
    { "source": "/api/users", "destination": "/api/users.js" },
    { "source": "/api/packages", "destination": "/api/packages.js" },
    { "source": "/api/payments", "destination": "/api/payments.js" },
    { "source": "/api/transactions", "destination": "/api/transactions.js" },
    { "source": "/api/health", "destination": "/api/health.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node@4.0.0"
    },
    {
      "src": "dist/**/*.{js,css,html,png,jpg,jpeg,gif,svg,ico,json,txt,map,webp}",
      "use": "@vercel/static"
    }
  ]
}