{
  "version": 2,
  "buildCommand": "npm run build-deploy",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/api/pi-price", "destination": "/dist/api/pi-price.js" },
    { "source": "/api/users", "destination": "/dist/api/users.js" },
    { "source": "/api/packages", "destination": "/dist/api/packages.js" },
    { "source": "/api/payments", "destination": "/dist/api/payments.js" },
    { "source": "/api/transactions", "destination": "/dist/api/transactions.js" },
    { "source": "/api/health", "destination": "/dist/api/health.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "builds": [
    {
      "src": "dist/api/**/*.js",
      "use": "@vercel/node@4.0.0"
    },
    {
      "src": "dist/assets/**/*.{js,css,map}",
      "use": "@vercel/static"
    },
    {
      "src": "dist/images/**/*.{png,jpg,jpeg,gif,svg,webp}",
      "use": "@vercel/static"
    },
    {
      "src": "dist/index.html",
      "use": "@vercel/static"
    }
  ]
}