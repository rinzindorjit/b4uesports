{
  "version": 2,
  "builds": [
    {
      "src": "server/vercel-handler.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/**",
          "server/**",
          "api/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/server/vercel-handler.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "FRONTEND_URL": "https://b4uesports.vercel.app",
    "API_URL": "https://b4uesports.vercel.app"
  }
}